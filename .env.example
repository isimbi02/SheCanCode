# Copy this file to .env in the project root (same folder as docker-compose.yml)
# Then run: docker compose up -d --build

# Database
POSTGRES_DB=shecancode
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456

# Backend service ports (internal container ports can stay as defaults)
LEAVE_SERVICE_PORT=8080
LEAVE_SERVICE_HOST_PORT=8080
AUTH_SERVICE_PORT=8081
AUTH_SERVICE_HOST_PORT=8081

# Frontend port on your machine
FRONTEND_PORT=8088

# JDBC URL that services use inside Docker network
DB_URL=jdbc:postgresql://postgres:5432/${POSTGRES_DB}
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}

# JWT settings
JWT_SECRET=ZmFrZVN1cGVyU2VjcmV0S2V5Rm9yRGVtby0xMjM0NTY3ODkw
JWT_EXP_MINUTES=240
